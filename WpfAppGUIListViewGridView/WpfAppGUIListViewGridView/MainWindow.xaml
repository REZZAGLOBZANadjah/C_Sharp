<Window x:Class="WpfAppGUIListViewGridView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppGUIListViewGridView"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="usersListView" Margin="139,60,179,124">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name"  Width="200"   DisplayMemberBinding="{Binding name}"/>
                    <GridViewColumn Header="Age"  Width="100"   DisplayMemberBinding="{Binding age}"/>
                    <GridViewColumn Header="mail"  Width="200"   DisplayMemberBinding="{Binding mail}"/>


                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
